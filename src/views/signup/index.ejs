<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.min.css"
    />
    <link rel="stylesheet" href="styles.css" />
    <title>Create Account - FileUp</title>
  </head>

  <body>
    <%- include('../partials/navbar.ejs') %>
    <main class="container">
      <h1 class="text-center">Sign Up</h1>
      <form id="signupForm" method="POST" action="/signup">
        <%- include('../partials/input', { inputOpts: { name: 'name', label:
        'Name', placeholder: 'John Doe', } }) %> <%-
        include('../partials/input', { inputOpts: { name:'email', label:
        'Email', placeholder: 'john@doe.com', } }) %> <%-
        include('../partials/input', { inputOpts: { name:'password', label:
        'Password', placeholder: '', type: 'password' } }) %>
        <button type="submit">Sign Up</button>
      </form>
      <div class="text-center">
        <a href="/login">Already have an account?</a>
      </div>
    </main>
    <%- include('../partials/footer.ejs') %>
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const signupForm = document.getElementById('signupForm');
        const submitButton = signupForm.querySelector('button[type="submit"]');

        signupForm.addEventListener('submit', () => {
          submitButton.disabled = true;
        });

        signupForm.addEventListener('reset', () => {
          submitButton.disabled = false;
        });
      });
    </script>
  </body>
</html>
